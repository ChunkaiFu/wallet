<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3">
      <div class="login-form mt-5">
        <h1 class="login-form__title text-center">Admin Login</h1>
        <%= form_with url: admin_sessions_path, method: :post, class: "form" do |form| %>
          <div class="form-group">
            <%= form.label :email, class: "form-label" %>
            <%= form.email_field :email, class: "form-control", autocomplete: "email" %>
          </div>

          <div class="form-group">
            <%= form.label :password, class: "form-label" %>
            <%= form.password_field :password, class: "form-control", autocomplete: "current-password" %>
          </div>

        <div class="text-center">
          <%=link_to "Login as admin", admin_login_path, class: "btn btn-lg btn-dark custom-width", style: "width: 200px;margin-top: 10px; margin-bottom: 10px;"%>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
