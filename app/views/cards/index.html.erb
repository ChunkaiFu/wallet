<h1>My Cards</h1>
<div class="row">
  <% if @cards %>
    <% @cards.each do |card| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= card.issuer %></h5>
            <h6 class="card-subtitle mb-2 text-muted">Card Number: <%= card.number %></h6>
            <p class="card-text">Card Holder Name: <%= card.holder_name %></p>
            <p class="card-text">Expiration Date: <%= card.expiration_date %></p>
          </div>
          
          <div class="mx-3 btn-group d-grid gap-2 d-md-block mb-2 align-items-center">
            <div>
              <%= form_with model: card, url: wallet_card_path(card.id), data: { turbo: false }, method: :patch do |form| %>
                <%= form.hidden_field :id %>
                <%= form.submit "Select", class: "btn btn-primary" %>
              <% end %>
            </div>
            <div>
              <%= form_with model: card, url: wallet_card_path(card.id), data: { turbo: false }, method: :delete do |form| %>
                <%= form.hidden_field :id %>
                <%= form.submit "Delete", class: "btn btn-primary" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div>
	<%=link_to "Add a card now!", new_wallet_card_path, class: "btn btn-primary"%>
</div>